#!/bin/bash

user=`whoami`
if [ "$user" != "root" ]
then
    echo 'Sorry, this shell script must be run as root; perhaps you meant to use "sudo"?'
    exit
fi

echo "Hello!  Please be patient while everything is installed..."
echo ""

cd ~
git clone https://github.com/cicchiello/t2p.git

cd t2p
./install_worker.bsh 

